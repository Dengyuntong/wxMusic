/* miniprogram/pages/detail/index.wxss */
.detail_box{
  padding: 0;
  margin: 0;
  width: 100%;
  background: #eee;
  background-image: url('http://pic1.win4000.com/mobile/2019-05-17/5cde798e04310.jpg');
  background-repeat: no-repeat;
  background-size: 100% 100%;
  overflow: hidden;
}
.detail_btns{
  width: 100%;
  padding: 0;
  margin: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 4rem;
  line-height: 4rem;
  position: fixed;
  bottom: 15%;
}
.detail_btns > .start{
  font-size: 4rem;
}
.detail_btns > .suspend {
  font-size: 3rem
}
.detail_btns > icon{
  padding: 0;
  margin: 0;
  font-size: 2rem;
  color: #fff;
  margin: 0 .7rem;
  text-shadow: 0 0 3px #000;
}
.return {
  color: #fff;
  /* padding-top: 1.7rem; */
  padding-left: .6rem;
  display: inline-block;
}
.fonts{
  font-size: 1.5rem;
}
.return_horevr{
  background: rgba(0, 0, 0, .3)
}
.progressBar{
  width: 100%;
  padding: 0;
  margin: 0;
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  bottom: 7%;
  box-sizing: border-box;
  padding: 0 .7rem;
}
.progressBar > text {
  color: #fff;
  text-shadow: 0 0 2px #000;
}
.progressBar > .allBox{
  width: 80%;
  /* height: 5px; */
  box-sizing: border-box;
  border-radius: 2.5px;
  background: rgba(0, 0, 0, .1);
  margin: 0 .6rem;
  padding: .2rem .6rem;
  /* overflow: hidden; */
}
.progressBar > .allBox > .allBox_minBox{
  margin: 0;
}